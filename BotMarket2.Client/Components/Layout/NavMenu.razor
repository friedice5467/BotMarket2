@if (IsStatic)
{
    <MudItem>
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <MudIcon Icon="@Icons.Material.Filled.Home" Color="@Color.Tertiary" Size="Size.Large" Title="Home" />
        </NavLink>
    </MudItem>

}
else
{
    <MudNavMenu Dense="true">
        <MudItem>
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <MudIcon Icon="@Icons.Material.Filled.Home" /> Home
            </NavLink>
        </MudItem>
        <MudItem>
            <NavLink class="nav-link" href="counter">
                <MudIcon Icon="@Icons.Material.Filled.AddBox" /> Counter
            </NavLink>
        </MudItem>
        <MudItem>
            <NavLink class="nav-link" href="stock">
                <MudIcon Icon="@Icons.Material.Filled.Money" /> Stock
            </NavLink>
        </MudItem>
    </MudNavMenu>
}

@code
{
    [Parameter]
    public bool IsStatic { get; set; }
}


